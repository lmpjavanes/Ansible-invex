<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Windows Software Installation Report</title>
  <style>
    body { font-family: Arial, sans-serif; }
    table { border-collapse: collapse; width: 100%; }
    th, td { border: 1px solid #ddd; padding: 8px; vertical-align: top; }
    th { background: #f2f2f2; position: sticky; top: 0; }
    .bad { color: #b00020; font-weight: bold; }
  </style>
</head>
<body>
  <h2>Windows Software Installation Report</h2>
  <p>Generado: {{ ansible_date_time.date }} {{ ansible_date_time.time }} | Host controlador: {{ ansible_hostname }}</p>

  <table>
    <tr>
      <th>Host</th>
      <th>Ambiente</th>
      <th>Paquete</th>
      <th>Descripción</th>
      <th>Proveedor</th>
      <th>Estado</th>
      <th>Fecha instalación</th>
      <th>Versión</th>
      <th>Estado del servicio</th>
      <th>Puerto 5693</th>
      <th>Script ejecutado</th>
      <th>Limpieza</th>
      <th>Mensaje</th>
    </tr>

    {% for host_result in (installation_results_windows | default([])) %}
      {% if host_result.packages is defined and (host_result.packages | length > 0) %}
        {% for pkg in host_result.packages %}
        <tr>
          <td>{{ host_result.host | default('') }}</td>
          <td>{{ pkg.ambiente | default('N/A') }}</td>
          <td>{{ pkg.package_name | default('') }}</td>
          <td>{{ pkg.description | default('') }}</td>
          <td>{{ pkg.vendor | default('') }}</td>
          <td class="{{ 'bad' if (pkg.status | default('')) in ['failed', 'unreachable', 'unavailable'] else '' }}">{{ pkg.status | default(host_result.overall_status | default('')) }}</td>
          <td>{{ pkg.install_date | default('') }}</td>
          <td>{{ pkg.version_installed | default('N/A') }}</td>
          <td>{{ pkg.service_status | default('N/A') }}</td>
          <td>{{ pkg.port_status | default('N/A') }}</td>
          <td>{{ pkg.script_ejecutado | default('') }}</td>
          <td>{{ 'Sí' if pkg.cleanup_performed == 'Sí' else 'No' }}</td>
          <td class="{{ 'bad' if (host_result.overall_status | default('')) in ['failed', 'unreachable', 'unavailable'] else '' }}">{{ host_result.message | default(pkg.message | default('')) }}</td>
        </tr>
        {% endfor %}
      {% else %}
        <tr>
          <td>{{ host_result.host | default('') }}</td>
          <td colspan="11" style="font-style: italic;">Sin paquetes procesados</td>
          <td class="{{ 'bad' if (host_result.overall_status | default('')) in ['failed', 'unreachable', 'unavailable'] else '' }}">{{ host_result.message | default('Sin información') }}</td>
        </tr>
      {% endif %}
    {% endfor %}

  </table>
</body>
</html>